{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<main >
<div class="container form-signin">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Accédez à votre compte</h1>
     <p class="text-center">Pour accéder à votre compte, merci de renseigner votre identifiant et votre mot de passe</p>
    <div class="form-floating">
    <label for="inputEmail"></label>
          <input type="email" class="form-control" id="floatingInput" requied name="_username" placeholder="IDENTIFIANT" value ="{{ last_username }}">

    <!--<input type="email" placeholder="IDENTIFIANT" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>-->
     </div>
    
    <div class="form-floating">
    <label for="inputPassword"></label>
     <input type="password" class="form-control" id="floatingPassword" requied name="_password" placeholder="MOT DE PASSE">
    <!--<input type="password" placeholder="MOT DE PASSE" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>-->
 </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
<div class="form-floating">
      <label>
        <a href="#">Mot de passe oublié ?</a>
      </label>
    </div>
</div>
</main>
{% endblock %}
